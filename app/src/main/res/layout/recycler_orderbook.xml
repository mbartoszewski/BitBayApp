<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/orderbook_item_constraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/shopping_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/baseline_shopping_cart_24"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_rate_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/default_card_value"
        android:textSize="@dimen/orderbook_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/shopping_icon"
        app:layout_constraintStart_toEndOf="@+id/shopping_icon"
        app:layout_constraintTop_toTopOf="@+id/shopping_icon" />

    <TextView
        android:id="@+id/order_amount_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_card_value"
        android:textColor="?android:attr/textColorHint"
        android:textSize="@dimen/orderbook_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/order_rate_header_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/order_rate_header_text" />

    <TextView
        android:id="@+id/order_value_header_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/default_card_value"
        android:textColor="?android:attr/textColorHint"
        android:textSize="@dimen/orderbook_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/order_amount_header_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/order_amount_header_text" />
</android.support.constraint.ConstraintLayout>