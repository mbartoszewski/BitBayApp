<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rss_feed_source_dialog_item_constraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/rss_url_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="?android:attr/textColorHint"
        android:textSize="@dimen/hint_text_size"
        app:layout_constraintStart_toStartOf="@+id/rss_source_text_view"
        app:layout_constraintTop_toBottomOf="@+id/rss_source_text_view" />

    <CheckBox
        android:id="@+id/rss_source_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/rss_url_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rss_source_text_view" />

    <TextView
        android:id="@+id/rss_source_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/rss_source_image_view"
        app:layout_constraintEnd_toStartOf="@+id/rss_source_check_box"
        app:layout_constraintStart_toEndOf="@+id/rss_source_image_view"
        app:layout_constraintTop_toTopOf="@+id/rss_source_image_view" />

    <ImageView
        android:id="@+id/rss_source_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_max="48dp"
        app:layout_constraintHeight_min="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="64dp"
        app:layout_constraintWidth_min="24dp"
        app:srcCompat="@drawable/coindesk" />
</android.support.constraint.ConstraintLayout>