<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true">

    <TextView
        android:id="@+id/volume_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="volume"
        android:textColor="?android:attr/textColorHint"
        android:textSize="@dimen/hint_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/open_text_view"
        app:layout_constraintEnd_toStartOf="@+id/close_text_view"
        app:layout_constraintStart_toEndOf="@+id/open_text_view"
        app:layout_constraintTop_toTopOf="@+id/open_text_view" />

    <TextView
        android:id="@+id/low_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="low"
        android:textColor="?android:attr/textColorHint"
        android:textSize="@dimen/hint_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/high_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/high_text_view" />

    <TextView
        android:id="@+id/high_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="high"
        android:textColor="?android:attr/textColorHint"
        android:textSize="@dimen/hint_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/close_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="close"
        android:textColor="?android:attr/textColorHint"
        android:textSize="@dimen/hint_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/open_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/open_text_view" />

    <TextView
        android:id="@+id/open_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="2dp"
        android:text="open"
        android:textColor="?android:attr/textColorHint"
        android:textSize="@dimen/hint_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/high_text_view"
        app:layout_constraintTop_toBottomOf="@+id/date_text_view" />

    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="date"
        android:textColor="?android:attr/textColorHint"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/high_text_view"
        app:layout_constraintEnd_toStartOf="@+id/low_text_view"
        app:layout_constraintStart_toEndOf="@+id/high_text_view"
        app:layout_constraintTop_toTopOf="@+id/high_text_view" />
</android.support.constraint.ConstraintLayout>